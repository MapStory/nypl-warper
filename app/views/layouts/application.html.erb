<!DOCTYPE html>
<html>
  <head>
    <title>MapStory Map Warper: <%= (@html_title) || ''-%></title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link href='http://fonts.googleapis.com/css?family=Lato:300,400,900' rel='stylesheet' type='text/css'>
    <%= javascript_include_tag "openlayers/2.8/OpenLayers-2.8/OpenLayers" %>
    <%= javascript_include_tag 'application' %>
    
    <%= csrf_meta_tags %>

    <%= yield :head %>
  </head>
  <% if @onload -%>
    <body onload="<%=@onload%>">
  <%else-%>
    <body>
  <%end%>
      
    <% if read_only_mode %>
      <%= render :partial => 'shared/read_only' %>
    <% end %>
    
    <%= render "header" %>

    <div id="headerDiv" class="headerDiv">
      <h1><%= link_to "NYPL Map Warper", root_path %></h1>
      <%= render :partial => 'shared/header' %>
    </div>

    <%= breadcrumbs "application" %>
    
    <div id="warper-maindiv">

      <%= flash_messages %>

      <%= yield %>
    </div>

    <%= render "footer" %>

    <%= render :partial => 'shared/analytics' %>
  </body>
</html>
