<div id="search-form">
  <%= render :partial => 'shared/search' -%>
</div>

<div id="map_list">

  <% if @my_maps -%>
    <h2>My Maps</h2>
    <table id="map_table" cellpadding="3">
      <thead>
        <tr>
          <th>Map</th>
          <th>Title</th>
          <th>Last modified</th>
          <th>Status</th>
        </tr>
      </thead>
        <tbody>
          <%= render @my_maps %>
        </tbody>
      </table>
      <%= link_to "See all of My Maps", my_maps_path(:user_id => current_user) -%> 
    <% end -%>

  <h2>Most Recently Rectified Maps</h2>

  <table id="map_table" cellpadding="3">
    <thead>
      <tr>
        <th>Map</th>
        <th>Title</th>
        <th>Last modified</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <%= render @maps %>
    </tbody>
  </table>
</div>

<div class="continue_link"><%= link_to "More Rectified Maps...", :controller => 'maps', :show_warped => 1 %></div>
