<h1>Listing API keys</h1>

<table class="padded">
  <thead>
    <tr>
      <th>Key</th>
      <th>Notes</th>
      <th>Enabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apikeys.each do |apikey| %>
      <tr>
        <td><%= apikey.key %></td>
        <td><%= apikey.notes %></td>
        <td><%= apikey.enabled %></td>
        <td><%= link_to 'Show', apikey %></td>
        <td><%= link_to 'Edit', edit_apikey_path(apikey) %></td>
        <td><%= link_to 'Destroy', apikey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New API key', new_apikey_path %>
